        <description>Given a user's login information, determine the user's email address</description>
        <name>getEmailForUser</name>
        <script><![CDATA[function getEmailForUser(login) {
	var gr = new GlideRecord('sys_user');
	gr.addQuery('user_name', login);
	gr.query();
	gr.next();
	return gr.getValue('email');
}
]]></script>
